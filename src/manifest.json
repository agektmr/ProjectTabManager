{
  "name": "Project Tab Manager",
  "description": "__MSG_description__",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "48": "img/48.png",
    "128": "img/48.png"
  },
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/config.js",
      "js/VisibilityTracker.js",
      "js/ProjectTabManager.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/19.png",
    "default_title": "Project Tab Manager",
    "default_popup": "ng-popup.html"
  },
  "options_page": "ng-options.html"
}
