{
  "name": "Project Tab Manager",
  "short_name": "PTM",
  "description": "__MSG_description__",
  "manifest_version": 2,
  "version": "5.0.1",
  "icons": {
    "48": "img/48.png",
    "128": "img/128.png"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/48.png",
    "default_title": "Project Tab Manager",
    "default_popup": "app.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+P",
        "mac": "MacCtrl+P"
      }
    }
  }
}
